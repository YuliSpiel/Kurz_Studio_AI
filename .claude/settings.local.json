{
  "permissions": {
    "allow": [
      "Bash(chmod:*)",
      "Bash(tree:*)",
      "Bash(git reset:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(pkill:*)",
      "Bash(git checkout:*)",
      "Bash(source kvenv/bin/activate)",
      "Bash(pip install:*)",
      "Bash(python3:*)",
      "Bash(convert:*)",
      "Bash(kvenv/bin/python:*)",
      "Bash(awk:*)",
      "Bash(git log:*)",
      "Bash(git stash:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cat CLAUDE.md 2>/dev/null || echo ''"
          }
        ]
      }
    ]
  }
}
